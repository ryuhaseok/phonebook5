<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="phonebook">

	<!-- 쿼리문 작성 selectOne -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.PersonVo">
		select  person_id personId,
				name,
        		hp,
       			company
		from person
		where person_Id = #{no}
	</select>

	<!-- 전체 리스트 가져오기 -->
	<select id="select" resultType="com.javaex.vo.PersonVo">
		select  person_id personId,
				name,
				hp,
				company
		from person
	</select>
	
	<!-- 쿼리문 작성 insert -->
	<insert id="insert" parameterType="com.javaex.vo.PersonVo">
		insert into person
		values(null, #{name}, #{hp}, #{company})
	</insert>
	
	<!-- 쿼리문 작성 update -->
	<update id="update" parameterType="com.javaex.vo.PersonVo">
		update person
		set name = #{name},
			hp = #{hp},
		    company = #{company}
		where person_id = #{personId}
	</update>
	
	
	<!-- 쿼리문 작성 delete -->
	<delete id="delete" parameterType="int">
		delete from person
		where person_id = #{no}
	</delete>

</mapper>